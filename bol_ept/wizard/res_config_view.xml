<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_res_config_bol_instance" model="ir.ui.view">
            <field name="name">Configure Instance</field>
            <field name="model">res.config.bol.instance</field>
            <field name="arch" type="xml">
                <form string="Configure Instance" class="oe_form_configuration">
					<group>
                    	<group>
                    		<field name="name" required="1"/>
                    		<field name='bol_country_id' required="1" options="{'no_create':True,'no_create_edit': True}" />
                    	</group>
                    </group>
                    <group>
                    	<field name="public_key" required="1" password="True"></field>
                    	<field name="private_key" required="1" password="True"></field>
                    	<field name="test_environment"></field>
                    </group>                    
                	<footer>
                        <button string="Create" type="object" name="test_bol_connection" class="oe_highlight"/>
                        or
                        <button  class="oe_highlight" special="cancel" string="Cancel"/>
                    </footer>                    
                </form>
            </field>
        </record>                
        
        <record id="res_config_action_bol_instance" model="ir.actions.act_window">
            <field name="name">Instances</field>
            <field name="res_model">res.config.bol.instance</field>
            <field name="view_mode">form</field>
            <field name="view_type">form</field>
            <field name="target">new</field>
            <field name="view_id" ref="view_res_config_bol_instance"/>
        </record>        

        <record id="view_bol_config_settings" model="ir.ui.view">
            <field name="name">Bol Settings</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="1"/>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
