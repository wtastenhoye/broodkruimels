<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <!-- Multi - Company Rules -->
    	<record model="ir.rule" id="bol_instance_comp_rule">
	        <field name="name">Bol Instance multi-company</field>
	        <field name="model_id" ref="model_bol_instance_ept"/>
	        <field name="global" eval="True"/>
	        <field name="domain_force">['|',('company_id','=',False),('company_id','child_of',[user.company_id.id])]</field>
	    </record>

		<record model="ir.module.category" id="module_bol_ept">
            <field name="name">Bol</field>
            <field name="description">Bol User Access Rights</field>
            <field name="sequence">100</field>
        </record>

        <record model="res.groups" id="group_bol_ept">
            <field name="name">User</field>
	        <field name="implied_ids" eval="[(4,ref('sales_team.group_sale_manager')),(4,ref('stock.group_tracking_lot')),(4,ref('account.group_account_invoice'))]"/>
            <field name="category_id" ref="module_bol_ept"/>
        </record>
        <record model="res.groups" id="group_bol_manager_ept">
            <field name="name">Manager</field>
            <field name="category_id" ref="module_bol_ept"/>
	        <field name="implied_ids" eval="[(4, ref('group_bol_ept'))]"/>
			<field name="users" eval="[(4, ref('base.user_root'))]"/>
        </record>
        <!-- <record model="res.groups" id="group_bol_debug_ept">
            <field name="name">Show bolCommerce Debug Info</field>
        </record> -->
    </data>
</openerp>