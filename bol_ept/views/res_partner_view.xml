<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>

		<record id="view_partner_form_ept" model="ir.ui.view">
			<field name="name">res.partner.form.ept</field>
			<field name="model">res.partner</field>
			<field name="type">form</field>
			<field name="inherit_id" ref="base.view_partner_form"/>
	           <field name="arch" type="xml">
	           	<field name="street2" position="after">
	           		<field name="is_bol_customer" invisible="1"></field>
	           		<field name="house_no" placeholder="House Number" class="o_address_city" attrs="{'invisible':[('is_bol_customer','=',False)]}"></field>
	           		<field name="house_no_ext" placeholder="House Number Extended" class="o_address_city" attrs="{'invisible':[('is_bol_customer','=',False)]}"></field>
	           	</field>
				<field name="user_id" position="after">						
					<field name="bol_company_name" readonly="1" attrs="{'invisible':[('bol_company_name','=',False)]}"/>
				</field>
				<xpath expr="//notebook/page/field/form/sheet/group/group[1]/div/div/field[2]" position="after">
					<field name="is_bol_customer" invisible="1"></field>
	           		<field name="house_no" placeholder="House Number" class="o_address_city" attrs="{'invisible':[('is_bol_customer','=',False)]}"></field>
	           		<field name="house_no_ext" placeholder="House Number Extended" class="o_address_city" attrs="{'invisible':[('is_bol_customer','=',False)]}"></field>
	           </xpath>
			</field>
		</record>
		
        <record id="view_bol_partner_tree" model="ir.ui.view">
            <field name="name">res.partner.tree</field>
            <field name="model">res.partner</field>
            <field eval="100" name="priority"/>
            <field name="arch" type="xml">
                <tree string="Contacts" create="false">
                    <field name="name"/>
                    <field name="function" invisible="1"/>
                    <field name="email"/>
                    <field name="user_id" invisible="1"/>
                    <field name="company_id" invisible="1"/>
                    <field name="is_company" invisible="1"/>
                    <field name="country_id" invisible="1"/>
                    <field name="parent_id" invisible="1"/>
				</tree>
            </field>
        </record>

        <record id="action_bol_partner_form" model="ir.actions.act_window">
            <field name="name">Customers</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.partner</field>
 			<field name="domain">[('is_bol_customer','!=',False)]</field> 
            <field name="view_type">form</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="context">{"search_default_customer":1}</field>
            <field name="view_id" ref="view_bol_partner_tree"/>
            <field name="search_view_id" ref="base.view_res_partner_filter"/>
	        <field name="help" type="html">
	             <div class="oe_empty_bol_customers">
	                 <br/><br/><br/>
	                 <p>
	                   <b>There are no any Bol Customer Created yet</b>
	                 </p>
	                 <p>
	                   You can't create Bol.com Customer directly from here.When order is imported system will automatically 
	                   create customer in ERP. 
	                 </p>
	             </div>
			</field>
        </record>
		
		<record id="action_bol_instance_partner_form" model="ir.actions.act_window">
            <field name="name">Customers</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.partner</field>
 			<field name="domain">[('is_bol_customer','=',True)]</field> 
            <field name="view_type">form</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="search_view_id" ref="base.view_res_partner_filter"/>
	        <field name="help" type="html">
	             <div class="oe_empty_bol_customers">
	                 <br/><br/><br/>
	                 <p>
	                   <b>There are no any Bol Customer Created yet</b>
	                 </p>
	                 <p>
	                   You can't create Bol.com Customer directly from here. When order is imported system will automatically 
	                   create customer in ERP. 
	                 </p>
	             </div>
			</field>
        </record>
        
        <menuitem id="menu_item_bol_customers" name="Customers"
		parent="bol_menu_item_sales" sequence="1"
		action="action_bol_partner_form" />

	</data>
</odoo>