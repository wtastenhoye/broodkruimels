<?xml version="1.0" ?>
<odoo>
  <data>	

	<record id="bol_fbb_transport_tree_view_ept" model="ir.ui.view">
	    <field name="name">Bol FBB Tranasport Tree View</field>
	    <field name="model">bol.fbb.transport.ept</field>
		<field name="arch" type="xml">
            <tree string="Bol FBB Trasnport Tree View" create="false" editable="bottom">            
            	<field name="name" readonly="1"/>
	            <field name="code" readonly="1"/>
	            <field name="bol_instance_id" readonly="1"/>
	            <field name="carrier_id"/>
	        </tree>
		</field>
	</record>
	
	<record model="ir.ui.view" id="bol_fbb_transport_search_view_ept">
		<field name="name">Bol FBB Transport Search View</field>
		<field name="model">bol.fbb.transport.ept</field>
		<field name="type">search</field>
		<field name="arch" type="xml">
			<search string="Bol FBB Transports">
                <field name="name" string="Name" filter_domain="[('name','ilike',self)]"/>
                <field name="code" string="Code" filter_domain="[('code','like',self)]"/>
                <group expand="0" string="Group By">
	                <filter string="Instance" domain="[]" context="{'group_by':'bol_instance_id'}"/>
	            </group>
			</search>
		</field>
	</record>
	
	<record id="action_bol_fbb_transport_ept" model="ir.actions.act_window">
        <field name="name">FBB Transports</field>
		<field name="res_model">bol.fbb.transport.ept</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="bol_fbb_transport_tree_view_ept"/>
        <field name="help" type="html">
             <div>
                 <br/><br/><br/>
                 <p>
                   <b>There are no any FBB Transports available yet</b>
                 </p>
             </div>
		</field>
   	</record>
	
    <menuitem id="menu_item_bol_fbb_transport_ept" name="FBB Transports"
      parent="bol_ept.menu_configuration_ept" sequence="8"
	  action="action_bol_fbb_transport_ept"/>
	  
   </data>
</odoo>
